<div class="container d-flex justify-content-center align-items-center">
    <div class="card shadow-lg p-4 text-center border-0 rounded"
        style="max-width: 500px; width: 100%; background: rgba(255, 255, 255, 0.95);">
        <div class="card-body">

            <!-- User Avatar -->
            <div class="mb-3">
                <img src="<%= member.avatar ? member.avatar : 'https://static.vecteezy.com/system/resources/thumbnails/020/765/399/small_2x/default-profile-account-unknown-icon-black-silhouette-free-vector.jpg' %>"
                    alt="Avatar" class="rounded-circle shadow"
                    style="width: 140px; height: 140px; object-fit: cover; border: 3px solid #007bff;">
            </div>

            <!-- User Information -->
            <h2 class="fw-bold text-dark">
                <%= member.name %>
            </h2>
            <p class="text-muted fs-5 mb-2">Joined: <%= member.createdAt.substr(0,10) %>
            </p>

            <!-- Error Message -->
            <% if (error) { %>
                <div class="alert alert-danger py-2 my-3">
                    <%= error %>
                </div>
                <% } %>

                    <!-- Buttons -->
                    <div class="d-flex justify-content-center gap-3">
                        <a href="/members/edit" class="btn btn-outline-primary fw-bold px-4">
                            <i class="fas fa-user-edit"></i> Edit
                        </a>
                        <a href="/members/change-password" class="btn btn-outline-secondary fw-bold px-4">
                            <i class="fas fa-key"></i> Change Password
                        </a>
                    </div>

                    <!-- Delete Account Button -->
                    <form action="/members/<%= member._id %>?_method=DELETE" method="POST" class="mt-4">
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-danger fw-bold w-100 py-2"
                            onclick="return confirm('Are you sure you want to delete your account?');">
                            <i class="fas fa-trash-alt"></i> Delete Account
                        </button>
                    </form>

        </div>
    </div>
</div>